@page
@model CVproject.Pages.SendModel
@{

}
<form method="post">
    <label asp-for=@Model.input.FirstName></label>
    <input type="text" asp-for=@Model.input.FirstName/>
    <span asp-validation-for=@Model.input.FirstName></span><br /><br />

    <label asp-for=@Model.input.LastName></label>
    <input type="text" asp-for=@Model.input.LastName/>
    <span asp-validation-for=@Model.input.LastName></span><br /><br />

    <label asp-for=@Model.input.Nationality></label>
    <select asp-for="@Model.input.Nationality" asp-items="@Model.Nationality"></select><br /><br />


    <label asp-for=@Model.input.Gender></label><br />
    @for(int i = 0; i < Model.Gender.Count; i++)
    {
        <input type="radio" asp-for="@Model.input.Gender" value="@Model.Gender[i]" >
        <label>@Model.Gender[i] &nbsp &nbsp </label>
    }
    <br /><br />



    <label asp-for=@Model.input.DateOfBirth></label>
    <input  type="date" asp-for=@Model.input.DateOfBirth/>
    <span asp-validation-for=@Model.input.DateOfBirth></span><br /><br />

    <label>Skills</label><br />
    
    <input type="checkbox" asp-for=@Model.input.skill1 />
    <label asp-for=@Model.input.skill1 ></label>&nbsp &nbsp

    <input type="checkbox" asp-for=@Model.input.skill2 />
    <label asp-for=@Model.input.skill2 ></label>&nbsp &nbsp

    <input type="checkbox" asp-for=@Model.input.skill3 />
    <label asp-for=@Model.input.skill3 ></label>&nbsp &nbsp
    
    <input type="checkbox" asp-for=@Model.input.skill4 />
    <label asp-for=@Model.input.skill4></label>&nbsp &nbsp
    
    <input type="checkbox" asp-for=@Model.input.skill5 />
    <label asp-for=@Model.input.skill5></label>&nbsp &nbsp

    <br /><br />

    <label asp-for=@Model.input.Email></label>
    <input type="text" asp-for=@Model.input.Email/>
    <span asp-validation-for=@Model.input.Email></span><br /><br />

    <label asp-for=@Model.input.ConfirmEmail></label>
    <input type="text" asp-for=@Model.input.ConfirmEmail />
    <span asp-validation-for=@Model.input.ConfirmEmail></span><br /><br />


    <label asp-for=@Model.input.x></label>
    <input type="int" asp-for=@Model.input.x />
    <span asp-validation-for=@Model.input.x></span><br /><br />

    <label asp-for=@Model.input.y></label>
    <input type="int" asp-for=@Model.input.y />
    <span asp-validation-for=@Model.input.y></span><br /><br />

    <label asp-for=@Model.input.sum></label>
    <input type="int" asp-for=@Model.input.sum />
    <span asp-validation-for=@Model.input.sum></span><br /><br />


    <!--nationality,photo,X,Y,sum,-->
    <input type="submit" />
    <a asp-page="./Index">Back to List</a>
</form>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h4>Validation Errors:</h4>
        <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                <li>@error.ErrorMessage</li>
                }
        </ul>
    </div>
}
else if (Model.successMessage.Length>0 )
{
    <div class="alert-success">
        <h4>Success Message:</h4>
        <strong>@Model.successMessage</strong>
    </div>
}


